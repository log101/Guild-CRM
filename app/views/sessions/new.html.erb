<!-- Login form -->
<%= stylesheet_link_tag "login.css" %>
<div class="container-fluid">
		<%if alert %>
		
			<div class="alert alert-danger">
				<%= alert %>	
			</div>
		<% end %>



<%= form_with scope: :session, class:"form-signin", local: true do |form| %>
	<h1 class="h3 mb-3 font-weight-normal">GUILD</h1>
	<h3 class="h3 mb-3 font-italic">Login</h3>
	<%= form.text_field :email, autofocus: true, class: "form-control",
placeholder: "Email"%>
	<%= form.password_field :password, class: "form-control",
	placeholder: "Password"%>
	<%= form.submit "Login", class: "btn btn-lg btn-info btn-block" %>
	<p class="mt-5 mb-3 text-muted">log101 - 2019</p>
	<%= link_to "Go Back", root_path %>
<% end %>
</div>
